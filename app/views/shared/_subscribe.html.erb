<div class="subscribe">
  <%= form_with model: subscriber, html: {class: 'subscribe__form'} do |f| %>
    <%= f.email_field :email, placeholder: "Email", class: 'subscribe__email' %>
    <%= f.submit "Subscribe", class: "subscribe__button button button--styled" %>
  <% end %>
  <% if flash[:subscribe_ok] %>
    <p class="subscribe__message subscribe__message--subscribed">Thanks for subscribing!</p>
  <% elsif flash[:subscribe_error] %>
    <p class="subscribe__message subscribe__message--error"><%= flash[:subscribe_error] %></p>
  <% end %>
</div>
