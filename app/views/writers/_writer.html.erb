<div class="writer">
  <a href="<%= url_for(writer) %>">
    <span class="link--primary"><%= writer.name %></span><span class="link--secondary">&nbsp;&mdash;&nbsp;<%= writer.email %></span>
  </a>
  <% if writer.has_role? :friend %>
    <% unless current_writer.email == writer.email %>
      <div>
        <%= link_to "âœ•", writer_path(writer), method: 'delete', class: 'action--danger', data: {confirm: "Are you sure you want to remove #{writer.name}?"} %>
      </div>
    <% end %>
  <% else %>
    <div>
      <span><%= link_to "Approve", approve_writer_path(writer), method: 'post' %></span>
      <span class="action--danger"><%= link_to "Reject", approve_writer_path(writer), method: 'delete', data: { confirm: "Are you sure you want to reject #{writer.name}?" } %></span>
    </div>
  <% end %>
</div>
